{
  "name": "vartheme_bs5",
  "description": "Base theme for Varbase standard websites. Based on Bootstrap 5 framework using SASS, and extending Radix theme.",
  "private": true,
  "engines": {
    "npm": ">= 6.0",
    "yarn": ">= 1.6",
    "node": ">= 16.0"
  },
  "scripts": {
    "postinstall": "find node_modules/ -name '*.info' -type f -delete",
    "dev": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "production": "mix --production",
    "storybook": "start-storybook --port 3000"
  },
  "devDependencies": {
    "browser-sync": "~2",
    "browser-sync-webpack-plugin": "~2",
    "cross-env": "~7",
    "laravel-mix": "~6",
    "laravel-mix-copy-watched": "~2",
    "laravel-mix-stylelint": "~1",
    "node-sass": "~7",
    "postcss-scss": "~4",
    "sass": "~1",
    "sass-loader": "~11",
    "stylelint": "~14",
    "stylelint-config-prettier": "~9",
    "stylelint-config-recess-order": "~3",
    "stylelint-config-standard": "~24",
    "stylelint-webpack-plugin": "~3"
  },
  "dependencies": {
    "@babel/core": "~7",
    "@fortawesome/fontawesome-free": "~5",
    "@popperjs/core": "~2",
    "@storybook/addon-a11y": "~6",
    "@storybook/addon-actions": "~6",
    "@storybook/addon-backgrounds": "~6",
    "@storybook/addon-controls": "~6",
    "@storybook/addon-docs": "~6",
    "@storybook/addon-interactions": "~6",
    "@storybook/addon-links": "~6",
    "@storybook/addon-postcss": "~2",
    "@storybook/addon-storysource": "~6",
    "@storybook/addon-viewport": "~6",
    "@storybook/html": "~6",
    "@storybook/react": "~6",
    "babel-loader": "~8",
    "bootstrap": "~5",
    "bootstrap-borders-utilities": "~1",
    "css-loader": "~6",
    "drupal-attribute": "~1",
    "js-yaml-loader": "~1",
    "raw-loader": "~4",
    "storybook-source-code-addon": "~1",
    "style-loader": "~3",
    "twig": "~1",
    "twig-drupal-filters": "~3",
    "twig-loader": "https://github.com/fourkitchens/twig-loader",
    "webpack": "~5",
    "webpack-cli": "~4",
    "webpack-merge": "~5"
  }
}
